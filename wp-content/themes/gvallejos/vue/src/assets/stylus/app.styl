$fontPrincipal = "'Mukta', sans-serif"
$fontSecundario = "'Open Sans', sans-serif"

$grayLight = #e3e3e3
$azul = #546972
$azulLight = #dfebf7
$black = #000
$white = #fff

body
    margin: 0
    font-size: 14px
    font-family: 'Open Sans', sans-serif
    background: #e0e0e0

#app
    margin-left: 262px
    box-sizing: border-box

figure
    margin: 0px

img
    max-width: 100%
    height: auto

a
    color: $black
    text-decoration: none
    &:hover
        text-decoration: underline

p
    margin: 0px
    &.descripcion
        padding: 32px 0px;
        line-height: 24px;

input
    max-height: 46px

textarea
    min-height: 87px
    height: 100%
    resize: none

input, textarea
    padding: 16px 20px
    border: none
    width: 100%
    box-sizing: border-box
    font-family: 'Open Sans', sans-serif
    &:focus
        outline: none

button
    padding: 15px 0px
    border: none
    cursor: pointer
    &.btn
        min-width: 140px
        &.btn-blue
            background: $azul
            color: white
    &:hover
        text-decoration: underline
    &:focus
        outline: none
        text-decoration: underline

.container
    width: 100%

.btn-input
    width: 46px
    height: 46px
    box-sizing: border-box
    border: none
    background: $azul
    color: #fff

.search-input-layout
    display: flex

.separator
    display: flex
    align-items: center
    padding: 0px 4px
    font-size: 5px

@media (min-width: 576px)
    .container
        max-width: 540px

@media (min-width: 768px)
    .container
        max-width: 720px

@media (min-width: 992px)
    .container
        max-width: 960px

@media (min-width: 1200px)
    .container
        max-width: 1140px