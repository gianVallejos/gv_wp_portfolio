$fontPrincipal = "'Mukta', sans-serif"
$fontSecundario = "'Open Sans', sans-serif"

$grayLight = #e3e3e3
$azul = #546972
$azulLight = #dfebf7
$black = #000
$white = #fff

body
    margin: 0
    font-size: 15px
    font-family: 'Open Sans', sans-serif
    background: #e0e0e0

#app
    margin-left: 262px
    box-sizing: border-box

figure
    margin: 0px

img
    max-width: 100%
    height: auto

a
    color: $black
    text-decoration: none
    &:hover
        text-decoration: underline

p
    &.descripcion
        line-height: 24px;

input
    max-height: 46px

textarea
    height: 100%
    resize: none

input, textarea
    padding: 16px 20px
    border: none
    width: 100%
    box-sizing: border-box
    font-family: 'Open Sans', sans-serif
    &:focus
        outline: none

.btn
    padding: 15px 0px
    border: none
    cursor: pointer
    min-width: 140px!important
    width: auto
    &.btn-blue
        background: $azul
        color: white
    &:hover
        text-decoration: underline
    &:focus
        outline: none
        text-decoration: underline

.container
    width: 100%
    padding-right: 25px
    padding-left: 25px
    margin-right: auto
    margin-left: auto

.btn-input
    width: 46px
    height: 46px
    box-sizing: border-box
    border: none
    background: $azul
    color: #fff

.search-input-layout
    display: flex

.separator
    display: flex
    align-items: center
    padding: 0px 4px
    font-size: 5px

/* Contact Form Validations */ 
span
    &.wpcf7-not-valid-tip
        color: #b20000!important
        border-top: 3px solid #b20000
        padding: 10px 0px
        font-size: .82rem

div
    &.wpcf7-response-output
        position: absolute
        top: 0
        left: 0
        z-index: 999
        width: 100%
        height: 100px
        line-height: 100px
        text-align: center
        background: rgba(0, 0, 0, .8)
        color: white
        margin: 0px
        border: none

@media (min-width: 576px)
    .container
        max-width: 540px

@media (min-width: 768px)
    .container
        max-width: 720px

@media (min-width: 992px)
    .container
        max-width: 960px

@media (min-width: 1200px)
    .container
        max-width: 1140px